{
  "schema_version": "1.0.0",
  "description": "Preferences for memories storage and management",
  
  "public_knowledge": {
    "path": "memories/public/knowledge.pkl.gz",
    "read_only": true,
    "auto_reload_interval_minutes": 60,
    "backup_enabled": true,
    "backup_retention_days": 30
  },
  
  "private_knowledge": {
    "base_path": "memories/private/agents",
    "compression_enabled": true,
    "encryption_enabled": false,
    "auto_cleanup_days": 90
  },
  
  "manifold": {
    "genotype_map_path": "memories/public/manifold/genotype_map.json",
    "canonical_map_path": "memories/public/manifold/canonical_map.json",
    "auto_rebuild": false
  },
  
  "content_storage": {
    "enabled": false,
    "base_path": "memories/content",
    "shard_depth": 2,
    "format": "ndjson",
    "encryption_enabled": false,
    "max_thread_size_mb": 100
  },
  
  "maintenance_schedule": {
    "merge_knowledge": {
      "enabled": false,
      "schedule": "weekly",
      "source_pattern": "memories/private/agents/*/knowledge.pkl.gz",
      "destination": "memories/public/knowledge_merged.pkl.gz"
    },
    "decay_old_knowledge": {
      "enabled": false,
      "schedule": "daily",
      "targets": ["public", "private"]
    },
    "export_statistics": {
      "enabled": true,
      "schedule": "monthly",
      "output_path": "memories/statistics/"
    }
  }
}